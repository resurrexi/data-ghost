        <![endif]-->
        <title>{{meta_title}}</title>

        <!-- Icons -->
        <link rel="apple-touch-icon-precomposed" sizes="144x144" href="{{asset 'favicon.png'}}">
        <link rel="icon" type="image/png" href="{{asset 'favicon.png'}}">

        {{! Addition ghost head }}
        {{ghost_head}}
    </head>
    <body>
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{@blog.url}}">{{@blog.title}}</a>
                </div>
                {{navigation}}
            </div>
        </nav>
        <main role="main">
            <div class="container">
                <div class="row row-content">
                    <div class="col-sm-12">
                        {{{body}}}
                    </div>
                </div>
            </div>
        </main>
        <footer class="row-footer">
            <hr>
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <p align=center>&copy; {{date format="YYYY"}} {{@blog.title}}</p>
                    </div>
                </div>
            </div>
        </footer>

        <script type="text/javascript" src="{{asset 'js/plugins/sortable.min.js'}}"></script>
        <script type="text/javascript" src="{{asset 'js/plugins/purify.min.js'}}"></script>
