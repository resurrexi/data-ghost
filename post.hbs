{{!< default}}

<article class="{{post_class}}">
  {{! Everything inside the #post tags pulls data from the post }}

  {{#post}}

  <header class="post-header">
    <h1 class="post-title">{{title}}</h1>
    <section class="post-meta">
        <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD, YYYY"}}</time>
        <span class="tags">{{tags}}</span>
    </section>
    {{#if image}}<img class="post-image" src="{{image}}">{{/if}}
  </header>

  <section class="post-content">
    {{content}}
  </section>

  <div class="row row-content">
      {{#next_post}}
        <span class="pull-left"><a href="{{url}}"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>  {{title}}</a></span>
      {{/next_post}}
      {{#prev_post}}
        <span class="pull-right"><a href="{{url}}">{{title}} <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span></a></span>
      {{/prev_post}}
  </div>

  {{/post}}
</article>
